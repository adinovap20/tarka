{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true,
    },
    "editor.formatOnSave": true,
    "isort.args": [
        "--profile",
        "black"
    ],
    "black-formatter.args": [
        "--line-length",
        "120"
    ]
}